{
    "name": "hyperized/file",
    "description": "Basic file management operations with inmutable objects",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Gerben Geijteman",
            "email": "gerben@hyperized.net"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-posix": "*",
        "hyperized/value-objects": "dev-master",
        "thecodingmachine/safe": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "rector/rector": "^0.6"
    },
    "autoload": {
        "psr-4": {
            "Hyperized\\File\\": "src/"
        },
        "files": [
            "src/Safe/Filegroup.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Hyperized\\File\\Tests\\": "tests/"
        }
    }
}
