{
    "name": "hyperized/file",
    "type": "library",
    "description": "Basic POSIX file management operations with immutable objects",
    "license": "MIT",
    "authors": [
        {
            "name": "Gerben Geijteman",
            "email": "gerben@hyperized.net"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-posix": "*",
        "hyperized/value-objects": "^0",
        "thecodingmachine/safe": "^1"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.4",
        "phpunit/phpunit": "^9.0",
        "rector/rector": "^0.7"
    },
    "autoload": {
        "psr-4": {
            "Hyperized\\File\\": "src/"
        },
        "files": [
            "src/Safe/Filegroup.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Hyperized\\File\\Tests\\": "tests/"
        }
    }
}
